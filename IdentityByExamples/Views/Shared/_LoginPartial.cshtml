@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" 
                   title="Welcome">Bienvenido @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="nav-link btn btn-link text-info">Cerrar sesión</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account"
                   asp-action="Login">Entrar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account"
                   asp-action="Register">Registrar</a>
            </li>
        }
    </ul>

